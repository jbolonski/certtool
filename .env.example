###############################################
# Certificate Monitor Example Environment File
# Copy to .env and replace placeholder values.
# Do NOT commit real secrets.
###############################################

## Required Database Settings
DB_HOST=localhost
DB_PORT=3306
DB_NAME=cert_monitor
DB_USER=certmon_app
DB_PASSWORD=change_me_replace

## TLS / Security
# SslMode: Disabled|Preferred|Required|VerifyCA|VerifyFull
DB_SSL_MODE=Preferred
# AllowPublicKeyRetrieval=True only for local dev without TLS
DB_ALLOW_PUBLIC_KEY_RETRIEVAL=True

## Root password only used if DB_USER=root and DB_PASSWORD unset (dev convenience)
MYSQL_ROOT_PASSWORD=optional_root_password

## Runtime
TZ=UTC

## Optional / Future (uncomment when feature implemented)
# LOG_LEVEL=info
# CERT_WARN_DAYS=30
# CERT_CRITICAL_DAYS=15
# DB_POOL_MIN=1
# DB_POOL_MAX=10
# REPORT_OUTPUT_DIR=./reports
# LOG_DIR=./logs
# FF_ENABLE_JSON_METRICS=1
# FF_ENABLE_HTML_REPORT=1
